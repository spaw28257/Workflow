            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "responsive": true,
            })
        });

        //Marca los pagos que seran enviados a cuentas por pagar
        function SeleccionarPagosPlantilla(pcodigo, pcodigoitem, pcodigoplantilla) {

            //verificar si el pago fue seleccionado
            var seleccionar = document.getElementById("chkseleccionar_" + pcodigo + pcodigoitem);

            if (seleccionar.checked) {
                pseleccionado = true;
            } else {
                pseleccionado = false;
            }

            var parametros = { "codigo": pcodigo, "codigoitem": pcodigoitem, "codigoplantilla": pcodigoplantilla, "seleccionado": pseleccionado };

            $.ajax({
                type: 'POST',
                url: '@Url.Action("SeleccionarPagosPlantillas", "Wrkf_SolicitudOrdenPagoPlantilla")',
                content: "application/json; charset=utf-8",
                dataType: 'json',
                data: parametros,
                success: function (data)
                {

                },
                error: function (jqXHR, exception) {
                    var msg = '';
                    if (jqXHR.status === 0) {
                        msg = 'Not connect.\n Verify Network.';
                        swal(msg, 'Error', 'error');
                    } else if (jqXHR.status == 404) {
                        msg = 'Requested page not found. [404]';
                        swal(msg, 'Error', 'error');
                    } else if (jqXHR.status == 500) {
                        msg = 'Internal Server Error [500].';
                        swal(msg, 'Error', 'error');
                    } else if (exception === 'parsererror') {
                        msg = 'Requested JSON parse failed.';
                        swal(msg, 'Error', 'error');
                    } else if (exception === 'timeout') {
                        msg = 'Time out error.';
                        swal(msg, 'Error', 'error');
                    } else if (exception === 'abort') {
                        msg = 'Ajax request aborted.';
                        swal(msg, 'Error', 'error');
                    } else {
                        msg = 'Uncaught Error.\n' + jqXHR.responseText;
                        swal(msg, 'Error', 'error');
                    }
                }
            });
        }

        //enviar la plantilla a la aprobación de cuentas por pagar
        function BtnEnviarCxp() {
            var totalpagosseleccionados = 0;
            var chkseleccionado = document.getElementsByName("chkseleccionar");

            if ($("#txtgruporubro").val() == "") {
                swal("Debe seleccionar el grupo del rubro para la plantilla", "Solicitud Orden Pago Plantilla", "error");
            } else if ($("#txtrubro").val() == "") {
                swal("Debe seleccionar el rubro para la plantilla", "Solicitud Orden Pago Plantilla", "error");
