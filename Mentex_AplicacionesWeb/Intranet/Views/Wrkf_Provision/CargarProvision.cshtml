                                                        <input type="hidden" id="hddformapago_id" name="hddformapago_id" />
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label for="txtmonto">Monto</label>
                                                        <input type="text" id="txtmonto" name="txtmonto" class="form-control" value="0,00" style="background-color: oldlace; text-align:right;" />
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label for="txtfecha_creacion">Fecha Creación</label>
                                                        <input type="date" id="txtfecha_creacion" name="txtfecha_creacion" class="form-control" style="background-color: oldlace;" />
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label for="txtfecha_pago">Fecha Pago</label>
                                                        <input type="date" id="txtfecha_pago" name="txtfecha_pago" class="form-control" style="background-color: oldlace;" />
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="txtobservaciones">Observaciones</label>
                                                        <textarea name="txtobservaciones" id="txtobservaciones" class="form-control" rows="3" cols="80" style="background-color: oldlace;"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer justify-content-between">
                                            <div class="row">
