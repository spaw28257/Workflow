        //Registrar o actualizar la provision
        function RegistrarActualizarProvision() {

            var mensaje = "";

            if ($("#hddprovicion_id").val() == '') {
                $("#hddprovicion_id").val(-1);
            }

            if ($("#txtcodigoplantilla").val() == '') {
                mensaje = "El Código de plantilla es requerido \n";
            }

            if ($("#hddgruporubro_id").val() == '') {
                mensaje += "El grupo del rubro es requerido \n";
            }

            if ($("#hddrubro_id").val() == '') {
                mensaje += "El rubro es requerido \n";
            }

            if ($("#hddidproveedor").val() == '') {
                mensaje += "El proveedor es requerido \n";
            }

            if ($("#txtmoneda").val() == '') {
                mensaje += "El código de la moneda es requerido \n";
            }

            if ($("#txtchequera_id").val() == '') {
                mensaje += "El código de la chequera es requerido \n";
            }

            if ($("#hddformapago_id").val() == '') {
                mensaje += "La forma de pago es requerida \n";
            }

            if ($("#txtmonto").val() == '0,00') {
                mensaje += "El monto es requerido \n";
            }

            if ($("#txtfecha_pago").val() == '') {
                mensaje += "La fecha de pago es requerida";
            }

            if (mensaje.length == 0) {
                var vMonto = $("#txtmonto").val().replaceAll(".", "");

                var parametros = [
                    $("#hddprovicion_id").val(), //[0]
                    $("#hddidproveedor").val(), //[1]
                    $("#txtcodigoplantilla").val(), //[2]
                    $("#hddgruporubro_id").val(), //[3]
                    $("#hddrubro_id").val(), //[4]
                    $("#txttienda").val(), //[5]
                    $("#txtmoneda").val(), //[6]
                    $("#txtchequera_id").val(), //[7]
                    $("#hddformapago_id").val(), //[8]
                    vMonto, //[9]
                    $("#txtfecha_pago").val(), //[10]
                    $("#txtobservaciones").val(), //[11]
                ];

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("RegistrarActualizarProvision", "Wrkf_Provision")',
                    dataType: 'json',
                    data: { "item": parametros },
                    success: function (data) {
                        if (data.Codigox.length > 0) {
                            swal(data.Codigox + " " + data.Mensajex, data.Titulox, data.Tipox);
                        } else {
                            swal("La provisión fue registrada con exito", "Información", "success");
                            //actualizamos la vista
                            ListarProvisiones();
                        }
                    },
                    error: function (ex) {
                        var r = jQuery.parseJSON(response.responseText);
                        alert("Message: " + r.Message);
                        alert("StackTrace: " + r.StackTrace);
                        alert("ExceptionType: " + r.ExceptionType);
                    }
                });
            } else {
                //swal(mensaje, "Registrar o Actualizar Provisión", "error");
                alert(mensaje);
            }
        }

