<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reporte de Pago Pendientes por Área</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome -->
    <link href="~/Adminlte/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- DataTables -->
    <link href="~/Adminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Adminlte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Adminlte/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Adminlte/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/Adminlte/css/mentex.css" rel="stylesheet" />
</head>
<body onload="Imprimir()">

    <div class="row">
        <div class="col-md-2 text-left">
            <br />
            &nbsp;<img src="~/Adminlte/img/logo_mentex81x56.png" />
        </div>
        <div class="col-md-10 text-left">
            <br />
            &nbsp;<h2>Solicitudes de Pagos Pendientes por Área</h2>
        </div>
    </div>

    <br />

    <table id="table-solicitud-orden-pago" class="table table-bordered table-hover" style="width:100%;">
        <thead>
            <tr class="cabecera-tabla">
                <th style="text-align:center; font-weight:bold;">Número Solicitud</th>
                <th style="text-align:center; font-weight:bold;">Código Plantilla</th>
                <th style="text-align:center; font-weight:bold;">Nombre Plantilla</th>
                <th style="text-align:center; font-weight:bold;">R.I.F</th>
                <th style="text-align:center; font-weight:bold;">Proveedor</th>
                <th style="text-align:center; font-weight:bold;">Descripción</th>
                <th style="text-align:center; font-weight:bold;">Número Documento</th>
                <th style="text-align:center; font-weight:bold;">Total</th>
                <th style="text-align:center; font-weight:bold;">Moneda</th>
                <th style="text-align:center; font-weight:bold;">Fecha Documento</th>
                <th style="text-align:center; font-weight:bold;">Fecha de Pago</th>
                <th style="text-align:center; font-weight:bold;">Estatus</th>
                <th style="text-align:center; font-weight:bold;">Prioridad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listadopagospendientesarea in ViewBag.listapagospendientesporarea)
            {
            <tr>
                <td>@listadopagospendientesarea.Solicitudordenpago_Idx</td>
                <td>@listadopagospendientesarea.Codigoplantillax</td>
                <td>@listadopagospendientesarea.Nombreplantillax</td>
                <td>@listadopagospendientesarea.Rifx</td>
                <td>@listadopagospendientesarea.Proveedorx</td>
                <td>@listadopagospendientesarea.Descripcionx</td>
                <td>@listadopagospendientesarea.Numerodocumentox</td>
                <td class="text-right">@listadopagospendientesarea.Totalx</td>
                <td>@listadopagospendientesarea.Curncyidx</td>
                <td>@listadopagospendientesarea.FechaDocumentox</td>
                <td>@listadopagospendientesarea.FechaPagox</td>
                <td>@listadopagospendientesarea.Estatusx</td>
                <td>@listadopagospendientesarea.Prioridax</td>
            </tr>
            }
        </tbody>
    </table>

    <!-- jQuery -->
    <script src="~/Adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="~/Adminlte/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Adminlte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Adminlte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Adminlte/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Adminlte/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Adminlte/plugins/sweetalert2/sweetalert.min.js"></script>
    <script src="~/Adminlte/plugins/maskMoney/jquery.maskMoney.min.js"></script>

    <!-- AdminLTE App -->
    <script src="~/Adminlte/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Adminlte/js/demo.js"></script>

    <script>

        //imprimir el documento
        function Imprimir() {
            window.print();
        }
    </script>
</body>
</html>