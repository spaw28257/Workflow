    <script>

        var arrOrdenPago = [];
        var arrordenpagodetallecxp = [];

        //Acción del boton para listar las solicitudes de ordenes de pago
        $("#btnbuscar").click(function () {
            GetSolicitudOrdenPagoTodasCxP(0);
