        //obtiene el detalla de la solicitud de la orden de pago
        function GetDetalleSolicitudPago(Solicitudordenpago_Id) {
            var parametros = { "numerosolicitud_Id": Solicitudordenpago_Id };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetDetalleOrdenPagoPorRevisarCxP", "Wrkf_SolicitudOrdenPagoCxP")',
                dataType: 'json',
                data: parametros,
                success: function (data) {
                    arrordenpagodetallecxp = data;
                    var detalles = '';
                    var total_elemento = arrordenpagodetallecxp.length;

                    if (arrordenpagodetallecxp[0].Codigox.length > 0) {
                        swal(arrordenpagodetallecxp[0].Codigox + " " + arrordenpagodetallecxp[0].Mensajex, arrordenpagodetallecxp[0].Titulox, arrordenpagodetallecxp[0].Tipox);
                    } else {
                        if (total_elemento > 0) {
                            for (y = 0; y < total_elemento; y++) {
                                detalles += '<tr>'
                                    + '<td style="text-align:center;"><input type="checkbox" name="chkanular[]" value="1" class="form-check-input" /></td>'
                                    + '<td><input type="text" name="table_search" class="form-control float-right" placeholder="Search" readonly></td>'
                                    + '<td><input type="text" name="table_search" class="form-control float-right" placeholder="Search" readonly></td>'
                                    + '<td>' + arrordenpagodetallecxp[y].Proveedorx + '</td>'
                                    + '<td>' + arrordenpagodetallecxp[y].Descripcionx + '</td>'
                                    + '<td>' + arrordenpagodetallecxp[y].Numerodocumentox + '</td>'
                                    + '<td style="text-align:right">' + arrordenpagodetallecxp[y].Montoivax + '</td>'
                                    + '<td style="text-align:right">' + arrordenpagodetallecxp[y].Totalretenidox + '</td>'
                                    + '<td style="text-align:right">' + arrordenpagodetallecxp[y].Totalx + '</td>'
                                    + '<td style="text-align:center;"><input type="checkbox" name="chkaprobar[]" value="1" class="form-check-input" /></td>'
                                    + '</tr>';
                            }
                            $("#OrdenPagoRevisar").html(detalles);
                        }
                    }
                },
                error: function (ex) {
                    var r = jQuery.parseJSON(response.responseText);
                    alert("Message: " + r.Message);
                    alert("StackTrace: " + r.StackTrace);
                    alert("ExceptionType: " + r.ExceptionType);
                }
            });
        }

        //function para listar las solicitudes de las ordenes de pago por revisar por CxP
        function GetSolicitudOrdenPagoTodasCxP(cargaprimerasolicitud) {
            var parametros = {};

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetSolicitudOrdenPagoRevisarCxP", "Wrkf_SolicitudOrdenPagoCxP")',
                dataType: 'json',
                data: parametros,
                success: function (data) {
                    var total_elemento = 0;
                    var filastablas = "";
                    arrOrdenPago = data;
                    total_elemento = arrOrdenPago.length;

                    if (arrOrdenPago[0].Codigox.length > 0) {
                        swal(arrOrdenPago[0].Codigox + " " + arrOrdenPago[0].Mensajex, arrOrdenPago[0].Titulox, arrOrdenPago[0].Tipox);
                    } else {
                        if (total_elemento > 0) {
                            if (parseInt(cargaprimerasolicitud) == 1) {
                                GetCabeceraSolicitudPago(0);
                            } else {
                                for (x = 0; x < total_elemento; x++) {
                                    filastablas += '<tr data-dismiss="modal" style="cursor:pointer;" onclick="GetCabeceraSolicitudPago(' + x + ')">'
                                        + '<td>' + arrOrdenPago[x].Solicitudordenpago_Idx + '</td>'
                                        + '<td>' + arrOrdenPago[x].FechaRegx + '</td>'
                                        + '<td>' + arrOrdenPago[x].Usuarioregistrox + '</td>'
                                        + '<td>' + arrOrdenPago[x].curncyidx + '</td>'
                                        + '<td>' + arrOrdenPago[x].TotalSolicitudPagox + '</td>'
                                        + '</tr>';
                                }
                                $("#SolicitudOrdenPago").html(filastablas);
                            }
                        }
                    }
                },
                error: function (ex) {
                    var r = jQuery.parseJSON(response.responseText);
                    alert("Message: " + r.Message);
                    alert("StackTrace: " + r.StackTrace);
                    alert("ExceptionType: " + r.ExceptionType);
                }
            });
            return;
        }

        //Seleccionan los datos de la cabecera de la solicitud de la orden de pago
        function GetCabeceraSolicitudPago(x) {
            $("#txtsolicitudpagonum").val(arrOrdenPago[x].Solicitudordenpago_Idx);
            $("#txtusuariosolicitante").val(arrOrdenPago[x].Usuarioregistrox);
            $("#txtfechasolicitud").val(arrOrdenPago[x].FechaRegx);
            $("#txtmoneda").val(arrOrdenPago[x].curncyidx);
            $("#txttotalapagar").val(arrOrdenPago[x].TotalSolicitudPagox);

            //detalle de la solicitud de pago seleccionada
            GetDetalleSolicitudPago(arrOrdenPago[x].Solicitudordenpago_Idx);
        }
    </script>
