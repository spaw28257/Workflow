                            content: "application/json; charset=utf-8",
                            dataType: 'json',
                            data: parametros,
                            success: function (data) {
                                if (data.Codigox.length > 0) {
                                    swal(data.Codigox + " " + data.Mensajex, data.Titulox, data.Tipox);
                                } else {
                                    swal("Las solicitudes fueron procesadas con exito por Cuentas Por Pagar", "Información", "info");
                                    document.getElementById('frmpagoscxp').submit();
                                }
                            },
                            error: function (jqXHR, exception) {
                                var msg = '';
                                if (jqXHR.status === 0) {
                                    msg = 'Not connect.\n Verify Network.';
                                    swal(msg, 'Error', 'error');
                                } else if (jqXHR.status == 404) {
                                    msg = 'Requested page not found. [404]';
                                    swal(msg, 'Error', 'error');
                                } else if (jqXHR.status == 500) {
                                    msg = 'Internal Server Error [500].';
                                    swal(msg, 'Error', 'error');
                                } else if (exception === 'parsererror') {
                                    msg = 'Requested JSON parse failed.';
                                    swal(msg, 'Error', 'error');
                                } else if (exception === 'timeout') {
                                    msg = 'Time out error.';
                                    swal(msg, 'Error', 'error');
                                } else if (exception === 'abort') {
                                    msg = 'Ajax request aborted.';
                                    swal(msg, 'Error', 'error');
                                } else {
                                    msg = 'Uncaught Error.\n' + jqXHR.responseText;
                                    swal(msg, 'Error', 'error');
                                }
                            }
                        });
                    }
                })
            }
            else {
                swal("Debe seleccionar las solicitudes de pago que desea Aprobar o Rechazar", "Aprobación o Rechazo Por Cuentas Por Pagar", "error");
            }
        }

